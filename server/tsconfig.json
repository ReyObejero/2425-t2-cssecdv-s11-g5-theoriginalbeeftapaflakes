{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "rootDir": "./src",
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "moduleResolution": "node10",
        "baseUrl": "./",
        "paths": {
            "@/*": ["./src/*"]
        },
        "sourceMap": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "build"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
