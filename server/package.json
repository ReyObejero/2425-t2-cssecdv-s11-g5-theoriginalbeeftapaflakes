{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "./build/index.js",
    "scripts": {
        "build": "rimraf ./build && prisma generate && tsc && tsc-alias",
        "build:add": "git add ./build",
        "postinstall": "prisma generate",
        "start:dev": "cross-env NODE_ENV=\"development\" nodemon --watch \"./src/**\" --ext \"ts,json\" --ignore \"./src/**/*.spec.ts\" --exec \"ts-node src/index.ts\"",
        "prisma:push": "dotenv -e .env.development -- npx prisma db push",
        "prisma:seed:product": "dotenv -e .env.development -- npx ts-node src/database/seed/product.seed.ts"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@prisma/client": "^5.15.1",
        "argon2": "^0.40.3",
        "cloudinary": "^2.3.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "^9.5.0",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20.14.2",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^7.4.2",
        "nodemon": "^3.1.3",
        "pre-commit": "^1.2.2",
        "prisma": "^5.15.1",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.13.0"
    },
    "prisma": {
        "schema": "./src/database/schema"
    },
    "pre-commit": [
        "build",
        "build:add"
    ]
}
